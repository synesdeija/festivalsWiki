<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head'); %>
</head>

    <header>
    <%- include('partials/header'); %>
</header>
<main class="container">
   <div class="row justify-content-center">
      <section class="col-6 mt-5">
         <% if (locals.messages.errors) { %>
         <% messages.errors.forEach( el => { %>
         <div class="alert alert-danger">
            <%= el.msg %>
         </div>
         <% }) %>
         <% } %>
         <% if (locals.messages.info) { %>
         <% messages.info.forEach( el => { %>
         <div class="alert alert-info">
            <%= el.msg %>
         </div>
         <% }) %>
         <% } %>

         <div class="font-normal text-center container p-1 bg-indigo-900 text-indigo-200 font-mono rounded-3xl">

         <form action="/signup" enctype="multipart/form-data" method="POST">
            <div class="mb-3">

               <label for="userName" class="form-label">Choose a Username</label>
               <input type="text" class="form-control input-md" id="userName" name="userName">

            </div>

            <div class="mb-3">

               <label for="exampleInputEmail1" class="form-label">Your Email</label>
               <input type="email" class="form-control" id="inputEmailSignup" name="email">

               <div id="emailHelp" class="form-text">We'll never, ever share your email with anyone else.<i class="fa-light fa-hand-fingers-crossed"></i></div>

            </div>
            <div class="mb-3">

               <label for="password" class="form-label">Create a Password</label>
               <input type="password" class="form-control" id="password" name="password">

            </div>
            <div class="mb-3">

               <label for="confirmPassword" class="form-label">Type that Password in Again</label>
               <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
            </div>

            <button type="submit" class="btn bg-white fa-sharp fa-door-open" style="color:rgb(61 41 222) "> Submit</button>
       
        </form>
      </section>
   </div>
</div>
</main>
<footer>

   <%- include('partials/footer') %>
   </footer>
   
   </body>
   </html>